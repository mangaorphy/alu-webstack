#!/usr/bin/env bash
# script to config domain zone to point to load balancer
# add more subdomains and display info about them

domain=$1
if [ "$#" -eq 2 ]; then
   sub=$2
else
	sub=("www" "lb-01" "web-01" "web-02")
fi
for subdomain in "${sub[@]}"; do
    output=$(dig "$subdomain.$domain" | grep -A1 'ANSWER SECTION:' | tail -n -1 | awk '{ print "The subdomain " $1 " is a " $4 " record and points to " $5 }')
    echo "$output"
done
